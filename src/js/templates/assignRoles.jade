.ga-modal-header
  h4
    span
      i.fa.fa-male
    | Assign Roles to Simulation
.ga-modal-body
  .assign-role-wrapper(ng-show="unassignedRoles.length > 0")
    label Assign Role
    div.pre-padding
      select(name="assignRoleName" selecter selecter-opts="unassignedRoles" selecter-val="assignment.role")
    div.pre-padding
      select(name="assignRoleVal" selecter selecter-opts="roleValOpts" selecter-val="assignment.val")
    div.pre-padding
      button.btn.btn-block(type="button" ng-click="assignRole(assignment)") Assign
    hr
  .roles-assigned-wrapper
    label Roles Assigned
    div(ng-show="roles.length == 0")
      p None
    .list-group
      .list-group-item(ng-repeat="assign in roles")
        button.close(type="button" aria-hidden="true" ng-click="delRoleAssignemnt(assign.role)") Ã—
        | {{assign.val}} {{assign.role}}
.ga-modal-footer
  button.btn.btn-info.btn-block(type="button" ng-click="closeThisDialog()") Done
