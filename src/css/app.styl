@import "imports/fonts.styl"
@import "imports/dialog.styl"

body
  background-color #f1f2f6
  margin-top 20px

  .padded-row
    padding-top 10px
    padding-bottom 15px

  #calculating-progress
    text-align center

  #app-title-wrapper
    text-align center

    #app-title
      margin-bottom 40px

      span
        margin-right 25px
        position relative
        top -3px

  .form-group
    .label-note
      color: #AAB2BD
      font-size: 0.75em
      margin-bottom: 10px

  .list-group
    .list-group-item
      span.simGroupSizeItem
        background-color #8CC152
        padding: 7px 15px
        margin-right: 20px
        margin-top: 0px
        color: white
        display: inline-block

      span.studentIcon
        //background-color #A0D468
        //padding: 7px 15px
        margin-right: 20px
        margin-top: 0px
        color: #434A54
        //display: inline-block

  .group-assignment
    text-align left
    padding 10px 10px 10px 20px
    background-color #5D9CEC
    color #F5F7FA
    border-radius 20px
    border: 2px solid
    i
      color #FFFFFF
      margin-right 10px

  .group-1
    background-color #5D9CEC
    border-color #4A89DC

  .group-2
    background-color #ED5565
    border-color #DA4453

  .group-3
    background-color #A0D468
    border-color #8CC152

  .group-4
    background-color #FFCE54
    border-color #F6BB42

  .footer-logo
    span
      padding 7px 15px
      i
        margin-right 10px

.ngdialog
  .ngdialog-content
    .ga-modal-header
      padding 10px
      i
        margin-right 10px

    .ga-modal-body
      padding 10px

      input
        margin-bottom 10px

    .ga-modal-footer
      padding 10px
